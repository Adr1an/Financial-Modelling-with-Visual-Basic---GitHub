'This subroutine computes the value of e^x\
'using the approximation formula and outputs\
'the result together with the error\
Sub Exponent()\
\
'Declare Variables\
\
Dim x As Double\
\
Dim i As Integer\
\
Dim n, Num As Integer\
\
Dim Result, Result1, Error As Double\
\
'Declare Dynamic array\
Dim Expo() As Double\
\
\
'Allow the user to input the power and the number of\
'approximation terms\
\
x = InputBox("Enter the power for which to compute the exponential (x)")\
Num = InputBox("Enter the number of approximation terms")\
\
'Adjust the variable for the size of the array\
'for the "Base 0"\
n = Num - 1\
\
\
'Redeclare the array with the user defined size\
ReDim Expo(n)\
\
\
'Loop while calculating approximation terms and\
'populating the array with the results\
For i = 0 To n\
\
Expo(i) = x ^ i / Fact(i)\
\
Next i\
\
\
'Loop to add up all the terms in the array into one variable\
For i = 0 To n\
\
Result = Result + Expo(i)\
\
Next i\
\
\
'Calculate the exponential using the built in function\
Result1 = Exp(x)\
\
\
'Compute the absolute value of the error between\
'approximation and the excel function\
Error = Abs(Result - Result1)\
\
\
'Output the result\
MsgBox ("The result is " & Result)\
\
'Output the error\
MsgBox ("The error is " & Error)\
\
\
End Sub\
\
'This function computes the exponential using\
'built in application\
Function Fact(n)\
\
Fact = Application.Fact(n)\
\
End Function\
